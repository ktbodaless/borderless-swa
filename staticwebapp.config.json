{
  "auth": {
    "identityProviders": {
      "customOpenIdConnectProviders": {
        "b2c": {
          "registration": {
            "clientIdSettingName": "B2C_CLIENT_ID",
            "clientCredential": { "clientSecretSettingName": "B2C_CLIENT_SECRET" },
            "openIdConnectConfiguration": {
              "wellKnownOpenIdConfiguration": "https://bodaless.ciamlogin.com/TENANT_PREFIX.onmicrosoft.com/v2.0/.well-known/openid-configuration?p=signupsignin1"
            }
          },
          "login": { "scopes": ["openid", "profile", "email"] }
        }
      }
    }
  },
  "routes": [
    { "route": "/feed.html", "allowedRoles": ["authenticated"] }
  ],
  "responseOverrides": { "401": { "redirect": "/auth/signin.html", "statusCode": 302 } }
}
