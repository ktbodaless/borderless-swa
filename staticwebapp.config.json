{
  "navigationFallback": {
    "rewrite": "/index.html",
    "exclude": ["/api/*","/.auth/*","/auth/*","/feed.html","/messages.html","/profile.html"]
  },
  "auth": {
    "identityProviders": {
      "customOpenIdConnectProviders": {
        "b2c": {
          "registration": {
            "clientIdSettingName": "B2C_CLIENT_ID",
            "clientCredential": { "clientSecretSettingName": "B2C_CLIENT_SECRET" },
            "openIdConnectConfiguration": {
              "wellKnownOpenIdConfiguration": "https://bodaless.ciamlogin.com/YOURPREFIX.onmicrosoft.com/v2.0/.well-known/openid-configuration?p=signupsignin1"
            }
          },
          "login": { "scopes": ["openid","profile","email"] }
        },
        "b2c_reset": {
          "registration": {
            "clientIdSettingName": "B2C_CLIENT_ID",
            "clientCredential": { "clientSecretSettingName": "B2C_CLIENT_SECRET" },
            "openIdConnectConfiguration": {
              "wellKnownOpenIdConfiguration": "https://bodaless.ciamlogin.com/YOURPREFIX.onmicrosoft.com/v2.0/.well-known/openid-configuration?p=passwordreset1"
            }
          },
          "login": { "scopes": ["openid"] }
        }
      }
    }
  },
  "routes": [
    { "route": "/feed.html", "allowedRoles": ["authenticated"] },
    { "route": "/messages.html", "allowedRoles": ["authenticated"] },
    { "route": "/profile.html", "allowedRoles": ["authenticated"] }
  ],
  "responseOverrides": { "401": { "redirect": "/auth/signin.html", "statusCode": 302 } }
}
