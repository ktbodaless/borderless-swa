{
  "navigationFallback": {
    "rewrite": "/index.html",
    "exclude": ["/api/*", "/auth/*", "/feed.html", "/messages.html", "/profile.html"]
  },
  "auth": {
    "identityProviders": {
      "customOpenIdConnectProviders": {
        "b2c": {
          "registration": {
            "clientIdSettingName": "B2C_CLIENT_ID",
            "clientCredential": { "clientSecretSettingName": "B2C_CLIENT_SECRET" },
            "openIdConnectConfiguration": {
              "wellKnownOpenIdConfiguration": "https://TENANT_NAME.b2clogin.com/TENANT_NAME.onmicrosoft.com/v2.0/.well-known/openid-configuration?p=B2C_1_susi"
            }
          },
          "login": { "scopes": ["openid", "profile", "email"] }
        },
        "b2c_reset": {
          "registration": {
            "clientIdSettingName": "B2C_CLIENT_ID",
            "clientCredential": { "clientSecretSettingName": "B2C_CLIENT_SECRET" },
            "openIdConnectConfiguration": {
              "wellKnownOpenIdConfiguration": "https://TENANT_NAME.b2clogin.com/TENANT_NAME.onmicrosoft.com/v2.0/.well-known/openid-configuration?p=B2C_1_password_reset"
            }
          },
          "login": { "scopes": ["openid"] }
        }
      }
    }
  },
  "routes": [
    { "route": "/feed.html", "allowedRoles": ["authenticated"] },
    { "route": "/messages.html", "allowedRoles": ["authenticated"] },
    { "route": "/profile.html", "allowedRoles": ["authenticated"] }
  ],
  "responseOverrides": {
    "401": { "redirect": "/auth/signin.html", "statusCode": 302 }
  }
}
